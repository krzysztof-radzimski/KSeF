<?xml version="1.0" encoding="utf-8"?>
<!--
  Przykładowa faktura korygująca zgodna ze schematem KSeF FA(3)
  Ten plik przedstawia strukturę faktury korygującej z odniesieniem do faktury pierwotnej
-->
<Faktura xmlns="http://crd.gov.pl/wzor/2025/06/25/13775/"
         xmlns:etd="http://crd.gov.pl/xml/schematy/dziedzinowe/mf/2022/01/05/eD/DefinicjeTypy/">

  <!-- Nagłówek faktury -->
  <Naglowek>
    <KodFormularza kodSystemowy="FA (3)" wersjaSchemy="1-0E">FA</KodFormularza>
    <WariantFormularza>1</WariantFormularza>
    <DataWytworzeniaFa>2024-02-01T09:00:00</DataWytworzeniaFa>
    <SystemInfo>KSeF.Invoice.Samples 1.0</SystemInfo>
  </Naglowek>

  <!-- Podmiot1 - Sprzedawca -->
  <Podmiot1>
    <DaneIdentyfikacyjne>
      <NIP>1234567890</NIP>
      <Nazwa>Firma ABC Sp. z o.o.</Nazwa>
    </DaneIdentyfikacyjne>
    <Adres>
      <KodKraju>PL</KodKraju>
      <AdresL1>ul. Przykładowa 1</AdresL1>
      <AdresL2>00-001 Warszawa</AdresL2>
    </Adres>
  </Podmiot1>

  <!-- Podmiot2 - Nabywca -->
  <Podmiot2>
    <DaneIdentyfikacyjne>
      <NIP>0987654321</NIP>
      <Nazwa>Klient XYZ S.A.</Nazwa>
    </DaneIdentyfikacyjne>
    <Adres>
      <KodKraju>PL</KodKraju>
      <AdresL1>ul. Kliencka 99</AdresL1>
      <AdresL2>30-001 Kraków</AdresL2>
    </Adres>
  </Podmiot2>

  <!-- Fa - Dane merytoryczne faktury korygującej -->
  <Fa>
    <KodWaluty>PLN</KodWaluty>
    <P_1>2024-02-01</P_1>                    <!-- Data wystawienia korekty -->
    <P_2>FV/2024/001/KOR</P_2>               <!-- Numer faktury korygującej -->
    <P_6>2024-01-15</P_6>                    <!-- Data sprzedaży z faktury pierwotnej -->
    <RodzajFaktury>KOR</RodzajFaktury>       <!-- Typ: Faktura korygująca -->

    <!-- Dane faktury korygowanej -->
    <DaneFaKorygowanej>
      <DataWystFaKorygowanej>2024-01-15</DataWystFaKorygowanej>
      <NrFaKorygowanej>FV/2024/001</NrFaKorygowanej>
      <NrKSeF>1234567890-20240115-ABC123456789</NrKSeF>
    </DaneFaKorygowanej>

    <!-- Przyczyna korekty -->
    <P_15ZK>Błąd w cenie jednostkowej - udzielono rabatu</P_15ZK>

    <!-- Typ korekty: 1 = korekta wartości (ujemna lub dodatnia) -->
    <TypKorekty>1</TypKorekty>

    <!-- Podsumowanie wartości (różnice - ujemne przy zmniejszeniu) -->
    <P_13_1>-200.00</P_13_1>                 <!-- Zmiana netto 23% -->
    <P_14_1>-46.00</P_14_1>                  <!-- Zmiana VAT 23% -->
    <P_15>-246.00</P_15>                     <!-- Zmiana sumy brutto -->

    <!-- Adnotacje -->
    <Adnotacje>
      <P_16>2</P_16>
      <P_17>2</P_17>
      <P_18>2</P_18>
      <P_18A>2</P_18A>
      <Zwolnienie>
        <P_19N>1</P_19N>
      </Zwolnienie>
      <NoweSrodkiTransportu>
        <P_22N>1</P_22N>
      </NoweSrodkiTransportu>
      <P_23>2</P_23>
      <PMarzy>
        <P_PMarzyN>1</P_PMarzyN>
      </PMarzy>
    </Adnotacje>

    <!-- Pozycja korygująca (ujemna wartość = zmniejszenie) -->
    <FaWiersz>
      <NrWierszaFa>1</NrWierszaFa>
      <P_7>Usługa konsultingowa IT - korekta (rabat)</P_7>
      <P_8A>szt.</P_8A>
      <P_8B>1</P_8B>
      <P_9A>-200.00</P_9A>                    <!-- Ujemna cena = zmniejszenie -->
      <P_11>-200.00</P_11>                    <!-- Ujemna wartość netto -->
      <P_12>23</P_12>
    </FaWiersz>

  </Fa>

</Faktura>
